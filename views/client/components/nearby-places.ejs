<!-- Nearby Places Component -->
<section class="nearby-places-section" 
         data-current-type="<%= currentType %>" 
         data-current-id="<%= currentId %>">
    <div class="container">
        <h2 class="section-title">
            <i class="fa fa-map-marker"></i>
            Địa điểm gần đây
        </h2>
        <p class="section-subtitle">
            Khám phá các địa điểm thú vị trong bán kính <span class="radius-info">5km</span> xung quanh khu vực này (khoảng cách tương đối - tham khảo)
        </p>
        <p class="section-subtitle click-to-reload">
            <i class="fa fa-refresh"></i>
            Click để tải lại dữ liệu ...
        </p>
        
        <!-- Tabs Navigation -->
        <div class="nearby-tabs">
            <button class="tab-btn active" data-tab="cuisine">
                <i class="fa fa-cutlery"></i>
                Quán ăn (<span class="count" id="cuisine-count">0</span>)
            </button>
            <button class="tab-btn" data-tab="accommodation">
                <i class="fa fa-bed"></i>
                Khách sạn (<span class="count" id="accommodation-count">0</span>)
            </button>
            <button class="tab-btn" data-tab="attraction">
                <i class="fa fa-camera"></i>
                Điểm tham quan (<span class="count" id="attraction-count">0</span>)
            </button>
            <button class="tab-btn" data-tab="entertainment">
                <i class="fa fa-music"></i>
                Giải trí (<span class="count" id="entertainment-count">0</span>)
            </button>
        </div>

        <!-- Tab Content -->
        <div class="nearby-content">
            <!-- Cuisine Places Tab -->
            <div class="tab-content active" id="cuisine-tab">
                <div class="places-grid" id="cuisine-places">
                    <div class="loading-placeholder">
                        <i class="fa fa-spinner fa-spin"></i>
                        <p>Đang tải quán ăn gần đây...</p>
                    </div>
                </div>
            </div>

            <!-- Accommodations Tab -->
            <div class="tab-content" id="accommodation-tab">
                <div class="places-grid" id="accommodation-places">
                    <div class="loading-placeholder">
                        <i class="fa fa-spinner fa-spin"></i>
                        <p>Đang tải khách sạn gần đây...</p>
                    </div>
                </div>
            </div>

            <!-- Attractions Tab -->
            <div class="tab-content" id="attraction-tab">
                <div class="places-grid" id="attraction-places">
                    <div class="loading-placeholder">
                        <i class="fa fa-spinner fa-spin"></i>
                        <p>Đang tải điểm tham quan gần đây...</p>
                    </div>
                </div>
            </div>

            <!-- Entertainment Tab -->
            <div class="tab-content" id="entertainment-tab">
                <div class="places-grid" id="entertainment-places">
                    <div class="loading-placeholder">
                        <i class="fa fa-spinner fa-spin"></i>
                        <p>Đang tải địa điểm giải trí gần đây...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- No Results Message -->
        <div class="no-results" id="no-results" style="display: none;">
            <i class="fa fa-map-marker"></i>
            <h3>Không tìm thấy địa điểm gần đây</h3>
            <p>Hãy thử mở rộng bán kính tìm kiếm hoặc quay lại sau.</p>
        </div>
    </div>
</section>

