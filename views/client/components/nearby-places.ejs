<script>
// Nearby Places JavaScript
class NearbyPlaces {
    constructor(currentType, currentId) {
        this.currentType = currentType; // 'accommodation', 'attraction', 'entertainment'
        this.currentId = currentId;
        this.radius = 5; // km
        this.limit = 6;
        this.loadedTabs = new Set();
        
        this.init();
    }
    
    init() {
        this.bindTabEvents();
        this.bindReloadEvent();
        // Load appropriate tab based on current type
        this.loadAppropriateTab();
    }
    
    loadAppropriateTab() {
        // Show the same type tab first, then others
        const tabOrder = {
            'accommodation': ['accommodation', 'cuisine', 'attraction', 'entertainment'],
            'attraction': ['attraction', 'cuisine', 'accommodation', 'entertainment'],
            'entertainment': ['entertainment', 'cuisine', 'accommodation', 'attraction'],
            'cuisine': ['cuisine', 'accommodation', 'attraction', 'entertainment']
        };
        
        const tabs = tabOrder[this.currentType] || ['cuisine', 'accommodation', 'attraction', 'entertainment'];
        
        // Set the appropriate tab as active first
        this.switchTab(tabs[0]);
        
        // Then load the data
        this.loadTab(tabs[0]);
    }
    
    bindTabEvents() {
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const tabName = e.currentTarget.dataset.tab;
                this.switchTab(tabName);
                // Load tab data if not already loaded
                if (!this.loadedTabs.has(tabName)) {
                    this.loadTab(tabName);
                }
            });
        });
    }
    
    bindReloadEvent() {
        const reloadElement = document.querySelector('.click-to-reload');
        if (reloadElement) {
            reloadElement.addEventListener('click', () => {
                this.reloadAllData();
            });
        }
    }
    
    switchTab(tabName) {
        // Update active tab button
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.classList.remove('active');
        });
        document.querySelector(`[data-tab="${tabName}"]`).classList.add('active');
        
        // Update active tab content
        document.querySelectorAll('.tab-content').forEach(content => {
            content.classList.remove('active');
        });
        document.getElementById(`${tabName}-tab`).classList.add('active');
    }
    
    reloadAllData() {
        // Clear loaded tabs to force reload
        this.loadedTabs.clear();
        
        // Reset all tab counts
        document.querySelectorAll('.count').forEach(count => {
            count.textContent = '0';
        });
        
        // Show loading state for all tabs
        document.querySelectorAll('.places-grid').forEach(grid => {
            grid.innerHTML = `
                <div class="loading-placeholder">
                    <i class="fa fa-spinner fa-spin"></i>
                    <p>Đang tải lại dữ liệu...</p>
                </div>
            `;
        });
        
        // Hide no results message
        const noResults = document.getElementById('no-results');
        if (noResults) {
            noResults.style.display = 'none';
        }
        
        // Reload current active tab
        const activeTab = document.querySelector('.tab-btn.active');
        if (activeTab) {
            const tabName = activeTab.dataset.tab;
            this.loadTab(tabName);
        }
        
        // Show reload feedback
        this.showReloadFeedback();
    }
    
    showReloadFeedback() {
        const reloadElement = document.querySelector('.click-to-reload');
        if (reloadElement) {
            const originalText = reloadElement.innerHTML;
            reloadElement.innerHTML = '<i class="fa fa-check"></i> Đã tải lại dữ liệu!';
            reloadElement.style.background = 'rgba(40, 167, 69, 0.1)';
            reloadElement.style.borderColor = '#28a745';
            reloadElement.style.color = '#28a745';
            
            setTimeout(() => {
                reloadElement.innerHTML = originalText;
                reloadElement.style.background = 'rgba(18, 97, 166, 0.1)';
                reloadElement.style.borderColor = 'transparent';
                reloadElement.style.color = '#7f8c8d';
            }, 2000);
        }
    }
    
    async loadTab(tabName) {
        const container = document.getElementById(`${tabName}-places`);
        const countElement = document.getElementById(`${tabName}-count`);
        
        try {
            let data = [];
            
            switch (tabName) {
                case 'cuisine':
                    data = await this.fetchNearbyCuisinePlaces();
                    break;
                case 'accommodation':
                    data = await this.fetchNearbyAccommodations();
                    break;
                case 'attraction':
                    data = await this.fetchNearbyAttractions();
                    break;
                case 'entertainment':
                    data = await this.fetchNearbyEntertainments();
                    break;
            }
            
            this.renderPlaces(container, data, tabName);
            countElement.textContent = data.length;
            this.loadedTabs.add(tabName);
            
            // Show no results if empty
            if (data.length === 0) {
                this.showNoResults();
            }
            
        } catch (error) {
            console.error(`Error loading ${tabName}:`, error);
            this.showError(container, `Không thể tải ${this.getTabLabel(tabName)}`);
        }
    }
    
    async fetchNearbyCuisinePlaces() {
        const response = await fetch(`/api/nearby-places/${this.currentType}/${this.currentId}/cuisine?radius=${this.radius}&limit=${this.limit}`);
        return response.json();
    }
    
    async fetchNearbyAccommodations() {
        const response = await fetch(`/api/nearby-places/${this.currentType}/${this.currentId}/accommodation?radius=${this.radius}&limit=${this.limit}`);
        return response.json();
    }
    
    async fetchNearbyAttractions() {
        const response = await fetch(`/api/nearby-places/${this.currentType}/${this.currentId}/attraction?radius=${this.radius}&limit=${this.limit}`);
        return response.json();
    }
    
    async fetchNearbyEntertainments() {
        const response = await fetch(`/api/nearby-places/${this.currentType}/${this.currentId}/entertainment?radius=${this.radius}&limit=${this.limit}`);
        return response.json();
    }
    
    renderPlaces(container, places, type) {
        container.innerHTML = '';
        
        if (places.length === 0) {
            container.innerHTML = `
                <div class="no-results">
                    <i class="fa fa-${this.getTabIcon(type)}"></i>
                    <h3>Không có ${this.getTabLabel(type)} gần đây</h3>
                    <p>Hãy thử mở rộng bán kính tìm kiếm.</p>
                </div>
            `;
            return;
        }
        
        places.forEach(place => {
            const card = this.createPlaceCard(place, type);
            container.appendChild(card);
        });
    }
    
    createPlaceCard(place, type) {
        const template = document.getElementById('place-card-template');
        const card = template.content.cloneNode(true);
        
        // Set image
        const img = card.querySelector('.place-image img');
        img.src = place.mainImage || place.images?.[0] || '/client/img/placeholder.jpg';
        img.alt = place.name;
        
        // Set name
        card.querySelector('.place-name').textContent = place.name;
        
        // Set address
        card.querySelector('.place-address').textContent = place.address || 'Địa chỉ chưa cập nhật';
        
        // Rating removed as requested
        
        // Set distance with smart formatting
        let distanceText = 'N/A';
        let distanceBadgeText = 'N/A';
        if (place.distance) {
            if (place.distance < 1) {
                // Show in meters for distances less than 1km
                const meters = Math.round(place.distance * 1000);
                distanceText = `cách khoảng ${meters}m`;
                distanceBadgeText = `${meters}m`;
            } else {
                // Show in km for distances 1km or more
                distanceText = `cách khoảng ${place.distance.toFixed(1)} km`;
                distanceBadgeText = `${place.distance.toFixed(1)} km`;
            }
        }
        
        card.querySelector('.distance-text').textContent = distanceText;
        
        // Add distance badge to image overlay
        const overlay = card.querySelector('.place-overlay');
        if (place.distance) {
            const distanceBadge = document.createElement('div');
            distanceBadge.className = 'distance-badge';
            distanceBadge.innerHTML = `<i class="fa fa-location-arrow"></i> ${distanceBadgeText}`;
            overlay.appendChild(distanceBadge);
        }
        
        // Set click handler
        const viewBtn = card.querySelector('.view-btn');
        if (type === 'cuisine' && place.mapLink) {
            // For cuisine places, show "Xem bản đồ" and link to mapLink
            viewBtn.innerHTML = '<i class="fa fa-map"></i> Xem bản đồ';
            viewBtn.onclick = () => window.open(place.mapLink, '_blank');
        } else {
            // For other types, show "Xem chi tiết" and link to detail page
            viewBtn.innerHTML = '<i class="fa fa-eye"></i> Xem chi tiết';
            viewBtn.onclick = () => this.viewPlace(place, type);
        }
        
        return card;
    }
    
    renderStars(container, rating) {
        const fullStars = Math.floor(rating);
        const hasHalfStar = (rating % 1) >= 0.5;
        
        for (let i = 0; i < 5; i++) {
            const star = document.createElement('i');
            if (i < fullStars) {
                star.className = 'fa fa-star';
            } else if (i === fullStars && hasHalfStar) {
                star.className = 'fa fa-star-half-o';
            } else {
                star.className = 'fa fa-star-o';
            }
            container.appendChild(star);
        }
    }
    
    viewPlace(place, type) {
        let url = '';
        switch (type) {
            case 'cuisine':
                url = `/cuisine-place/${place._id}`;
                break;
            case 'accommodation':
                url = `/accommodation/${place.slug || place._id}`;
                break;
            case 'attraction':
                url = `/attraction/${place.slug || place._id}`;
                break;
            case 'entertainment':
                url = `/entertainment/${place.slug || place._id}`;
                break;
        }
        window.open(url, '_blank');
    }
    
    showNoResults() {
        document.getElementById('no-results').style.display = 'block';
    }
    
    showError(container, message) {
        container.innerHTML = `
            <div class="no-results">
                <i class="fa fa-exclamation-triangle"></i>
                <h3>Lỗi tải dữ liệu</h3>
                <p>${message}</p>
            </div>
        `;
    }
    
    getTabLabel(type) {
        const labels = {
            cuisine: 'quán ăn',
            accommodation: 'khách sạn',
            attraction: 'điểm tham quan',
            entertainment: 'địa điểm giải trí'
        };
        return labels[type] || type;
    }
    
    getTabIcon(type) {
        const icons = {
            cuisine: 'cutlery',
            accommodation: 'bed',
            attraction: 'camera',
            entertainment: 'music'
        };
        return icons[type] || 'map-marker';
    }
}

// Global function for template onclick
function viewPlace(button) {
    // This will be handled by the card click event
}

// Initialize when DOM is ready
document.addEventListener('DOMContentLoaded', function() {
    // Get current page type and ID from data attributes
    const nearbySection = document.querySelector('.nearby-places-section');
    if (nearbySection) {
        const currentType = nearbySection.dataset.currentType;
        const currentId = nearbySection.dataset.currentId;
        
        if (currentType && currentId) {
            new NearbyPlaces(currentType, currentId);
        }
    }
});
</script>
