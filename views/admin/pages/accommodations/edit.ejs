            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-map me-2"></i>
                        Tọa độ bản đồ
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="map[coordinates][0]" class="form-label">Kinh độ (Longitude)</label>
                                <input type="number" step="any" class="form-control" id="map[coordinates][0]" name="map[coordinates][0]" value="<%= accommodation.map?.coordinates?.[0] || '' %>" placeholder="105.8342">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="map[coordinates][1]" class="form-label">Vĩ độ (Latitude)</label>
                                <input type="number" step="any" class="form-control" id="map[coordinates][1]" name="map[coordinates][1]" value="<%= accommodation.map?.coordinates?.[1] || '' %>" placeholder="21.0278">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-3">
                                <label for="map[mapEmbed]" class="form-label">Link nhúng bản đồ</label>
                                <input type="url" class="form-control" id="map[mapEmbed]" name="map[mapEmbed]" value="<%= accommodation.map?.mapEmbed || '' %>" placeholder="https://www.google.com/maps/embed/...">
                            </div>
                        </div>
