                                    <option value="Ba Đình" <%= accommodation.district === 'Ba Đình' ? 'selected' : '' %>>Ba Đình</option>
                                    <option value="Tây Hồ" <%= accommodation.district === 'Tây Hồ' ? 'selected' : '' %>>Tây Hồ</option>
                                    <option value="Long Biên" <%= accommodation.district === 'Long Biên' ? 'selected' : '' %>>Long Biên</option>
                                    <option value="Cầu Giấy" <%= accommodation.district === 'Cầu Giấy' ? 'selected' : '' %>>Cầu Giấy</option>
                                    <option value="Đống Đa" <%= accommodation.district === 'Đống Đa' ? 'selected' : '' %>>Đống Đa</option>
                                    <option value="Hai Bà Trưng" <%= accommodation.district === 'Hai Bà Trưng' ? 'selected' : '' %>>Hai Bà Trưng</option>
                                    <option value="Hoàng Mai" <%= accommodation.district === 'Hoàng Mai' ? 'selected' : '' %>>Hoàng Mai</option>
                                    <option value="Thanh Xuân" <%= accommodation.district === 'Thanh Xuân' ? 'selected' : '' %>>Thanh Xuân</option>
                                    <option value="Hà Đông" <%= accommodation.district === 'Hà Đông' ? 'selected' : '' %>>Hà Đông</option>
                                    <option value="Nam Từ Liêm" <%= accommodation.district === 'Nam Từ Liêm' ? 'selected' : '' %>>Nam Từ Liêm</option>
                                    <option value="Bắc Từ Liêm" <%= accommodation.district === 'Bắc Từ Liêm' ? 'selected' : '' %>>Bắc Từ Liêm</option>
                                    <option value="Thanh Trì" <%= accommodation.district === 'Thanh Trì' ? 'selected' : '' %>>Thanh Trì</option>
                                    <option value="Gia Lâm" <%= accommodation.district === 'Gia Lâm' ? 'selected' : '' %>>Gia Lâm</option>
                                    <option value="Đông Anh" <%= accommodation.district === 'Đông Anh' ? 'selected' : '' %>>Đông Anh</option>
                                    <option value="Sóc Sơn" <%= accommodation.district === 'Sóc Sơn' ? 'selected' : '' %>>Sóc Sơn</option>
                                    <option value="Mê Linh" <%= accommodation.district === 'Mê Linh' ? 'selected' : '' %>>Mê Linh</option>
                                    <option value="Hà Nam" <%= accommodation.district === 'Hà Nam' ? 'selected' : '' %>>Hà Nam</option>
                                    <option value="Phú Xuyên" <%= accommodation.district === 'Phú Xuyên' ? 'selected' : '' %>>Phú Xuyên</option>
                                    <option value="Thường Tín" <%= accommodation.district === 'Thường Tín' ? 'selected' : '' %>>Thường Tín</option>
                                    <option value="Mỹ Đức" <%= accommodation.district === 'Mỹ Đức' ? 'selected' : '' %>>Mỹ Đức</option>
                                    <option value="Ứng Hòa" <%= accommodation.district === 'Ứng Hòa' ? 'selected' : '' %>>Ứng Hòa</option>
                                    <option value="Chương Mỹ" <%= accommodation.district === 'Chương Mỹ' ? 'selected' : '' %>>Chương Mỹ</option>
                                    <option value="Thanh Oai" <%= accommodation.district === 'Thanh Oai' ? 'selected' : '' %>>Thanh Oai</option>
                                    <option value="Thạch Thất" <%= accommodation.district === 'Thạch Thất' ? 'selected' : '' %>>Thạch Thất</option>
                                    <option value="Quốc Oai" <%= accommodation.district === 'Quốc Oai' ? 'selected' : '' %>>Quốc Oai</option>
                                    <option value="Ba Vì" <%= accommodation.district === 'Ba Vì' ? 'selected' : '' %>>Ba Vì</option>
